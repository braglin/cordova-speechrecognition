<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.jcsmesquita.plugins.speechrecognizer" version="1.0.0">
  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>
  
  <name>XSpeechRecognizer</name>
  <description>Recognizes speech input</description>
  <license>MIT</license>
  
  <js-module src="XSpeechRecognizer.js" name="XSpeechRecognizer">
    <clobbers target="plugins.speechrecognizer" /> 
  </js-module>
  
  <config-file target="AndroidManifest.xml" parent="/manifest">
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  </config-file>

  <platform name="android">
    <source-file src="XSpeechRecognizer.java" target-dir="src/com/jcsmesquita/plugins/speechrecognizer" />
    <source-file src="LanguageDetailsChecker.java" target-dir="src/com/jcsmesquita/plugins/speechrecognizer" />
    
    <config-file target="res/xml/config.xml" parent="/*">
  	  <feature name="XSpeechRecognizer" >
  	    <param name="android-package" value="com.jcsmesquita.plugins.speechrecognizer.XSpeechRecognizer"/>
  	  </feature>
  	</config-file>
    
  </platform>
  
</plugin>
